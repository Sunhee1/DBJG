<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_temperature"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sunhee.dogcat.Temperature">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:id="@+id/textView3"
        android:text="현재 온도 : "
        android:layout_alignBaseline="@+id/tv_nowtemp"
        android:layout_alignBottom="@+id/tv_nowtemp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ddddddddddd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/tv_nowtemp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="24dp" />

    <TextView
        android:text="℃"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_nowtemp"
        android:layout_toEndOf="@+id/tv_nowtemp"
        android:layout_marginStart="22dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="희망 온도 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="23dp"
        android:id="@+id/textView5" />

    <Button
        android:text="UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="134dp"
        android:id="@+id/bt_tempup" />

    <Button
        android:text="down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_tempup"
        android:layout_toEndOf="@+id/bt_tempup"
        android:layout_marginStart="44dp"
        android:id="@+id/bt_tempdown" />

    <Button
        android:text="register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_tempup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/bt_tempok" />

    <TextView
        android:text="℃"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/et_wishtemp"
        android:layout_alignBottom="@+id/et_wishtemp"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_wishtemp"
        android:hint="22"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/tv_nowtemp" />

</RelativeLayout>
